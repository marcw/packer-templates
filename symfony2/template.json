                "symfony2/scripts/base.sh",
                "support/scripts/vagrant.sh",
                "support/scripts/vmware.sh",
                "support/scripts/clean.sh"
            ],
            "execute_command": "chmod +x {{ .Path }}; sudo {{ .Vars }} {{ .Path }}"
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "output": "symfony2/{{ .Provider }}.box"
        }
